<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Routine">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/chestImage"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/chest_round"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="15dp"/>

            <ImageView
                android:id="@+id/backImage"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/back_round"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="15dp"
                />

            <ImageView
                android:id="@+id/legsImage"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/legs_round"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="15dp"/>

            <ImageView
                android:id="@+id/armsImage"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/arms_round"
                android:layout_marginBottom="15dp"/>

            <ImageView
                android:id="@+id/coreImage"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/core_round"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>